{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@nx-skeleton/shared/ui-components": [
        "libs/shared/ui-components/src/index.ts"
      ],
      "@nx-skeleton/shared/utils": ["libs/shared/utils/src/index.ts"],
      "@nx-skeleton/network/athena": ["libs/network/athena/src/index.ts"],
      "@nx-skeleton/network/athena-cm": ["libs/network/athena-cm/src/index.ts"],
      "@nx-skeleton/network/platform": ["libs/network/platform/src/index.ts"],
      "@nx-skeleton/network/salesforce": [
        "libs/network/salesforce/src/index.ts"
      ],
      "@nx-skeleton/network/entitlements": [
        "libs/network/entitlements/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
